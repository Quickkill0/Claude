{
  "// PERMISSION PHILOSOPHY": "This config provides near --dangerously-skip-permissions autonomy while blocking genuinely harmful operations",
  
  "defaultMode": "acceptEdits",
  
  "permissions": {
    "allow": [
      "// === FILE OPERATIONS === //",
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "Update(*)",
      "List(*)",
      "Search(*)",
      
      "// === VERSION CONTROL === //",
      "Bash(git:*)",
      
      "// === PACKAGE MANAGERS === //",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(pip:*)",
      "Bash(pip3:*)",
      "Bash(poetry:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(bundle:*)",
      "Bash(composer:*)",
      
      "// === BUILD & DEV TOOLS === //",
      "Bash(make:*)",
      "Bash(cmake:*)",
      "Bash(gradle:*)",
      "Bash(mvn:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      
      "// === TESTING & LINTING === //",
      "Bash(jest:*)",
      "Bash(pytest:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(black:*)",
      "Bash(flake8:*)",
      "Bash(mypy:*)",
      
      "// === FILE SYSTEM NAVIGATION === //",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      
      "// === TEXT PROCESSING === //",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      
      "// === PROCESS & SYSTEM INFO === //",
      "Bash(ps:*)",
      "Bash(top:*)",
      "Bash(htop:*)",
      "Bash(lsof:*)",
      "Bash(pkill:*)",
      "Bash(killall:*)",
      "Bash(which:*)",
      "Bash(whoami:*)",
      "Bash(env:*)",
      "Bash(printenv:*)",
      
      "// === DATABASE TOOLS === //",
      "Bash(sqlite3:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongosh:*)",
      "Bash(redis-cli:*)",
      
      "// === OTHER UTILITIES === //",
      "Bash(date:*)",
      "Bash(basename:*)",
      "Bash(dirname:*)",
      "Bash(realpath:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(tree:*)",
      "Bash(source:*)",
      "Bash(export:*)",
      "Bash(PORT=:*)"
    ],
    
    "deny": [
      "// === DANGEROUS SYSTEM MODIFICATIONS === //",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(chown:*)",
      "Bash(chmod:*)",
      "Bash(chgrp:*)",
      
      "// === DATA EXFILTRATION RISKS === //",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(netcat:*)",
      "Bash(telnet:*)",
      "Bash(scp:*)",
      "Bash(sftp:*)",
      "Bash(rsync:*)",
      
      "// === WEB FETCH (if you need to block all domains) === //",
      "// WebFetch(domain:*)",
      "// Or block specific domains:",
      "// WebFetch(domain:suspicious-site.com)",
      "// WebFetch(domain:*.untrusted.com)",
      
      "// === PROCESS TERMINATION === //",
      "Bash(kill -9:*)",
      "Bash(kill -SIGKILL:*)",
      
      "// === SENSITIVE FILE ACCESS === //",
      "Read(.env)",
      "Read(.env.*)",
      "Read(*.env)",
      "Read(./**/.env)",
      "Read(./**/.env.*)",
      "Read(./secrets/**)",
      "Read(./config/secrets/**)",
      "Read(./credentials/**)",
      "Read(./**/credentials/**)",
      "Read(./**/*secret*)",
      "Read(./**/*credential*)",
      "Read(./**/*password*)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.kube/**)",
      "Read(/etc/passwd)",
      "Read(/etc/shadow)",
      "Read(/etc/sudoers)",
      
      "// === WRITE PROTECTION FOR SENSITIVE FILES === //",
      "Write(.env)",
      "Write(.env.*)",
      "Write(*.env)",
      "Write(./**/.env)",
      "Write(./**/.env.*)",
      "Write(./secrets/**)",
      "Write(./config/secrets/**)",
      "Write(./credentials/**)",
      "Write(./**/credentials/**)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.kube/**)",
      "Write(/etc/**)",
      
      "// === SYSTEM CONFIGURATION === //",
      "Edit(/etc/**)",
      "Edit(/usr/**)",
      "Edit(/bin/**)",
      "Edit(/sbin/**)",
      "Edit(/boot/**)",
      "Edit(~/.bashrc)",
      "Edit(~/.zshrc)",
      "Edit(~/.profile)",
      "Edit(~/.bash_profile)"
    ]
  },
  
  "// SAFETY NOTES": [
    "This configuration provides high autonomy while preventing:",
    "1. File deletion (rm, rmdir)",
    "2. Permission changes (chmod, chown)",
    "3. Privilege escalation (sudo, su)",
    "4. Data exfiltration (curl, wget, nc)",
    "5. Disk operations (dd, mkfs)",
    "6. Access to secrets (.env, credentials, SSH keys)",
    "7. System file modifications (/etc, /usr, shell configs)",
    "",
    "If you need curl/wget, consider allowing specific trusted domains:",
    "Bash(curl api.trusted-domain.com:*)",
    "",
    "For even more autonomy, you could allow rm with specific paths:",
    "Bash(rm ./build/**)",
    "Bash(rm ./dist/**)",
    "Bash(rm ./node_modules/**)"
  ]
}
